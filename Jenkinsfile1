
pipeline {
    agent any
    tools {
        jdk 'JAVA_HOME'
        nodejs 'nodejs25'
    }
    stages {
        
        stage ("Git Checkout") {
            steps {
                git 'https://github.com/rudreshbs19/zomato.git'
            }
        }

 stage ("Build Docker Image") {
            steps {
                sh "docker build -t rudreshrudra1924/zomatoapp:1.0 ."
            }
        }
  stage('Tag & Push to DockerHub') {
    steps {
       script {
          withCredentials([usernamePassword(credentialsId: 'docker-logins', passwordVariable: 'dockerhubpass', usernameVariable: 'dockerhublogin')]) {
               sh 'docker login -u ${dockerhublogins} -p ${dockerhubpass}'
               sh "docker push rudreshrudra1924/zomatoapp:1.0 "
        }
    }
}

        }
    }
}
