
pipeline {
    agent any
    tools {
        jdk 'JAVA_HOME'
        nodejs 'nodejs25'
    }
    stages {
        
        stage ("Git Checkout") {
            steps {
                git 'https://github.com/rudreshbs19/zomato.git'
            }
        }

 stage ("Build Docker Image") {
            steps {
                sh "docker build -t rudreshrudra1924/zomatoapp:1.0 ."
            }
        }
  stage('Tag & Push to DockerHub') {
    steps {
       script {
           withCredentials([usernamePassword(credentialsId: 'docker-login', passwordVariable: 'dockerhubpasss', usernameVariable: 'dockerhubloginn')]) {
               sh 'docker login -u ${dockerhubloginn} -p ${dockerhubpasss}'
               sh "docker push rudreshrudra1924/zomatoapp:1.0 "
        }
    }
}

        }
    }
}
