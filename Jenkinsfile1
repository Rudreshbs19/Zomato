
pipeline {
    agent any
    tools {
        jdk 'JAVA_HOME'
        nodejs 'nodejs25'
    }
    stages {
        
        stage ("Git Checkout") {
            steps {
                git 'https://github.com/rudreshbs19/zomato.git'
            }
        }
 stage("Install NPM Dependencies") {
            steps {
                sh "npm install"
            }
        }
 stage ("Build Docker Image") {
            steps {
                sh "docker build -t rudreshrudra1924/zomatoapp:1.0 ."
            }
        }
    }
}
